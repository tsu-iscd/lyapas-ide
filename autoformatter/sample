  /F1<C
  /'Введите ключ:\n'>C
  /F2<C
  *encrypt(F1,F2/F3)
  /'Зашифрованный текст:\n'>C
  /F3>C
  /'\n'>C
  *encrypt1(F2/F4)
  /'Обратный ключ:\n'>C
  /F4>C
  /'\n'>C  
  *encrypt(F3,F4/F1)
  /'Расшифрованный текст:\n'>C
  /F1>C
  /'\n'>C 
